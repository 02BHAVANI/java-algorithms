import java.util.Scanner;

public class lab10 {
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the number");
        int a=sc.nextInt();
        int r,rev = 0;

        while(a!=0)
        {
            r=a%10;
            rev=rev*10+r;
            a=a/10;
        }
        System.out.println("the reverse number is "+rev);
    }
}
